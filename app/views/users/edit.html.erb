<h1>Edit Profile</h1>

<%= form_with(model: @user, local: true) do |form| %>
<div class="field">
    <%= form.label :first_name, "First Name" %>
    <%= form.text_field :first_name, value: @user.first_name %>
</div>
<div class="field">
    <%= form.label :last_name, "Last Name" %>
    <%= form.text_field :last_name, value: @user.last_name %>
</div>

<div class="actions">
    <%= form.submit "Update", class: "btn btn-primary" %>
</div>
<% end %>

<%= link_to 'Change Password', home_path, class: 'btn btn-secondary' %><br>
<%= link_to 'Back to Home', home_path, class: 'btn btn-secondary' %>